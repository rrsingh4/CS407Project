<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Border (optional stroke) -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />
</shape>
